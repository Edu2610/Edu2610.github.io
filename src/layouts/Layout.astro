---
// src/layouts/Layout.astro
interface Props {
	titulo: string;
}

const { titulo } = Astro.props;
import '../styles/global.css';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portafolio de Eduardo - Ingeniero y Profesor" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Outfit:wght@400;700&display=swap" rel="stylesheet">
		
		<title>{titulo}</title>
	</head>
	<body>
		<nav>
			<div class="nav-content">
				<a href="/" class="logo">Eduardo<span class="dot">.</span></a>
				<div class="links">
					<a href="/">Inicio</a>
					<a href="/educacion/">Educación</a>
					<a href="/informatica/">Informática</a>
				</div>
			</div>
		</nav>

		<main>
			<slot />
		</main>

		<footer>
			<p>© 2026 Eduardo. Construido con lógica y café.</p>
		</footer>
	</body>
</html>

