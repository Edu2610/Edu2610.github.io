---
import Layout from '../../../../layouts/Layout.astro';

// DEFINICIÓN DE CAPÍTULOS
const chapters = [
  {
    numero: "01",
    titulo: "Capítulo 1: El aprendizaje es incomprendido",
    fecha: "10 Feb 2026",
    desc: "Por qué repetir como loro no sirve, la ilusión de competencia y los modelos mentales.",
    tags: ["Ilusión de Competencia", "Modelos Mentales"],
    link: "/educacion/ensayos/make-it-stick/capitulo-1",
    active: true
  },
  {
    numero: "02",
    titulo: "Capítulo 2: Para aprender, recupera",
    fecha: "11 Feb 2026",
    desc: "Recuperando o que sabemos y el papel del examen",
    tags: ["Práctica de recuperación", "Evaluación"],
    link: "/educacion/ensayos/make-it-stick/capitulo-1",
    active: true
  },
];
---

<Layout titulo="Serie: Make It Stick | Eduardo">
  
  <div class="background-grid"></div>

  <main class="container">
    
    <header class="page-header">
      <a href="/educacion" class="btn-back">← Volver a Ensayos</a>
      
      <h1>Serie: <span class="text-gradient">Make It Stick</span></h1>
      <p class="subtitle">
        Desglosando la ciencia del aprendizaje exitoso. Un análisis capítulo a capítulo sobre cómo funciona realmente nuestra memoria.
      </p>
    </header>

    <section class="posts-grid">
      {chapters.map((chapter) => (
        <article class={`post-card ${!chapter.active ? 'inactive' : ''}`}>
          <a href={chapter.link} class="card-link">
            <div class="card-content">
              <div class="meta">
                <span class="date">{chapter.fecha}</span>
                <div class="tags">
                  {chapter.tags.map(tag => <span class="tag">#{tag}</span>)}
                </div>
              </div>
              
              <div class="chapter-number">CAPÍTULO {chapter.numero}</div>
              <h2>{chapter.titulo}</h2>
              <p>{chapter.desc}</p>
              
              {chapter.active ? (
                <span class="read-more">Leer capítulo →</span>
              ) : (
                <span class="read-more locked">En redacción...</span>
              )}
            </div>
          </a>
        </article>
      ))}
    </section>

  </main>
</Layout>

<style>
  /* --- 1. CONFIGURACIÓN BASE (Mismo diseño) --- */
  .background-grid {
    position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -10;
    background-color: #0f172a;
    background-image: linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px),
    linear-gradient(90deg, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
    background-size: 40px 40px;
    mask-image: radial-gradient(circle at center, black 40%, transparent 100%);
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 4rem 1.5rem;
  }

  /* --- 2. HEADER --- */
  .page-header {
    margin-bottom: 5rem;
    text-align: left; 
  }

  .btn-back {
    display: inline-block;
    color: var(--text-muted, #94a3b8);
    text-decoration: none;
    font-size: 0.9rem;
    margin-bottom: 2rem;
    transition: color 0.2s;
  }
  .btn-back:hover { color: var(--accent-mint, #4fd1c5); }

  h1 { font-size: 3rem; margin-bottom: 1rem; line-height: 1.1; color: #f1f5f9; }
  
  .subtitle { 
    font-size: 1.2rem; 
    color: var(--text-muted, #94a3b8); 
    max-width: 600px; 
    line-height: 1.6; 
  }

  .text-gradient {
    background: linear-gradient(45deg, var(--accent-purple, #c084fc), var(--accent-mint, #4fd1c5));
    -webkit-background-clip: text; -webkit-text-fill-color: transparent;
  }

  /* --- 3. GRID DE ARTÍCULOS --- */
  .posts-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .post-card {
    position: relative;
  }

  /* TARJETA INTERACTIVA */
  .card-link {
    display: block;
    background: rgba(15, 23, 42, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 2.5rem;
    text-decoration: none;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    position: relative;
    overflow: hidden;
  }

  /* Efecto Hover */
  .card-link:hover {
    border-color: var(--accent-purple, #c084fc);
    background: rgba(15, 23, 42, 0.9);
    transform: translateY(-5px);
    box-shadow: 0 10px 30px -10px rgba(192, 132, 252, 0.15);
  }

  /* Estilos específicos para capítulos inactivos */
  .post-card.inactive .card-link {
    opacity: 0.6;
    pointer-events: none; /* Deshabilita el click */
    border-color: rgba(255, 255, 255, 0.05);
  }
  
  .chapter-number {
    font-size: 0.8rem;
    font-weight: 700;
    letter-spacing: 2px;
    color: var(--accent-mint, #4fd1c5);
    margin-bottom: 0.5rem;
    margin-top: 1rem;
    text-transform: uppercase;
  }

  /* Título */
  .card-content h2 {
    color: #f1f5f9;
    font-size: 1.8rem;
    margin: 0.5rem 0 1rem 0;
    transition: color 0.3s;
  }
  .card-link:hover h2 { color: var(--accent-purple, #c084fc); }

  /* Texto */
  .card-content p {
    color: #94a3b8;
    line-height: 1.7;
    margin-bottom: 2rem;
  }

  /* Meta data */
  .meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.85rem;
    color: #64748b;
  }
  
  .tags { display: flex; gap: 0.5rem; }
  
  .tag {
    background: rgba(192, 132, 252, 0.1);
    color: var(--accent-purple, #c084fc);
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
    font-weight: 500;
  }

  /* Link Leer más */
  .read-more {
    color: var(--accent-mint, #4fd1c5);
    font-weight: 600;
    font-size: 0.95rem;
  }
  
  .read-more.locked {
    color: #64748b;
    font-style: italic;
  }

</style>