<style>
  /* --- CONFIGURACI√ìN BASE --- */
  .background-grid {
    position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -10;
    background-color: #0f172a;
    background-image: linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px),
    linear-gradient(90deg, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
    background-size: 40px 40px;
    mask-image: radial-gradient(circle at center, black 40%, transparent 100%);
  }

  .container { max-width: 1000px; margin: 0 auto; padding: 4rem 1.5rem; }

  /* HEADER */
  .page-header { margin-bottom: 3rem; text-align: left; }
  .btn-back { display: inline-block; color: #94a3b8; text-decoration: none; margin-bottom: 2rem; font-size: 0.9rem; }
  .btn-back:hover { color: var(--accent-mint); }
  
  h1 { font-size: 3rem; margin-bottom: 1rem; line-height: 1.1; color: #fff; }
  .text-gradient { background: linear-gradient(45deg, var(--accent-mint), #3b82f6); -webkit-background-clip: text; -webkit-text-fill-color: transparent; }
  .subtitle { font-size: 1.2rem; color: #94a3b8; max-width: 600px; line-height: 1.6; }

  /* --- GRUPOS DE RECURSOS --- */
  .resource-group { margin-bottom: 5rem; }
  .group-title {
    font-size: 1.5rem; color: #e2e8f0; margin-bottom: 1.5rem;
    border-bottom: 1px solid rgba(255,255,255,0.1); padding-bottom: 0.5rem;
  }

  .tools-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  /* CARD DESIGN */
  .card-link {
    display: flex; flex-direction: column; height: 100%;
    background: rgba(15, 23, 42, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    padding: 2rem;
    text-decoration: none;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    position: relative; overflow: hidden;
  }

  /* Efecto Hover Digital (Cyan) */
  .digital-card .card-link:hover {
    border-color: var(--accent-mint);
    transform: translateY(-5px);
    background: rgba(15, 23, 42, 0.9);
    box-shadow: 0 10px 30px -10px rgba(45, 212, 191, 0.2);
  }

  /* Efecto Hover Descargable (Sutil) */
  .download-card .card-link:hover {
    border-color: #cbd5e1;
    transform: translateY(-5px);
    background: rgba(30, 41, 59, 0.8);
  }

  /* Detalles de la tarjeta */
  .card-header { display: flex; justify-content: space-between; align-items: start; margin-bottom: 1.5rem; }
  .icon { font-size: 2rem; }
  
  .badge { padding: 0.3rem 0.8rem; border-radius: 50px; font-size: 0.75rem; font-weight: 700; text-transform: uppercase; }
  .badge.cyan { background: rgba(45, 212, 191, 0.1); color: var(--accent-mint); }
  .badge.gray { background: rgba(255, 255, 255, 0.1); color: #94a3b8; }

  .card-content h3 { color: #f1f5f9; font-size: 1.5rem; margin: 0 0 1rem 0; line-height: 1.2; }
  .card-content p { color: #94a3b8; font-size: 1rem; line-height: 1.6; margin-bottom: 2rem; flex-grow: 1; }
  
  .access-btn { color: var(--accent-mint); font-weight: 600; font-size: 0.95rem; }
</style>