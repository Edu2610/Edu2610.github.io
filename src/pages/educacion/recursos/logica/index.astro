---
import Layout from '../../../../layouts/Layout.astro';

const secuencias = [
  {
    step: "01",
    titulo: "Proposiciones",
    desc: "Definici√≥n de verdad, conectivos y sintaxis formal.",
    link: "/educacion/recursos/logica/proposiciones-conectivos",
    status: "Completado",
    color: "#34d399", // Menta
    icon: "üå±"
  },
  {
    step: "02",
    titulo: "Leyes L√≥gicas",
    desc: "√Ålgebra de proposiciones y simplificaci√≥n de circuitos.",
    link: "/educacion/recursos/logica/leyes-logicas",
    status: "Disponible",
    color: "#60a5fa", // Azul
    icon: "‚öôÔ∏è"
  },
  {
    step: "03",
    titulo: "Cuantificadores",
    desc: "L√≥gica de predicados: Universal y Existencial.",
    link: "/educacion/recursos/logica/cuantificadores",
    status: "Disponible",
    color: "#a78bfa", // P√∫rpura
    icon: "üåç"
  }
];
---

<Layout titulo="L√≥gica | Ruta de Aprendizaje">
  <div class="background-grid"></div>
  <div class="ambient-glow"></div>

  <main class="container">
    <header class="page-header">
      <a href="/educacion/recursos" class="btn-back">‚Üê Volver a Herramientas</a>
      <h1>Unidad 1: <span class="text-gradient">L√≥gica Formal</span></h1>
      <p class="subtitle">
        Lo b√°sico de l√≥gica proposicional, base fundamental para el razonamiento matem√°tico estructurado.
      </p>
    </header>

    <div class="pipeline-container">
      {secuencias.map((s, index) => {
        // Look-Ahead para el gradiente
        const nextStep = secuencias[index + 1];
        const nextColor = nextStep ? nextStep.color : s.color;
        
        return (
          <div class="pipeline-step" style={`--step-color: ${s.color}; --next-color: ${nextColor};`}>
            
            <div class="step-node">
              <span class="step-number">{s.step}</span>
              <div class="node-glow"></div>
            </div>

            {/* La l√≠nea solo se renderiza si no es el √∫ltimo */}
            {index !== secuencias.length - 1 && <div class="connector-line"></div>}

            <a href={s.link} class="step-card">
              <div class="card-bg-effect"></div>
              <div class="card-header">
                <span class="step-icon">{s.icon}</span>
                <span class="status-badge">{s.status}</span>
              </div>
              <h3>{s.titulo}</h3>
              <p>{s.desc}</p>
              <div class="hover-indicator">Ir a la clase ‚Üí</div>
            </a>
          </div>
        )
      })}
    </div>
  </main>
</Layout>

<style>
  /* CONFIGURACI√ìN BASE */
  .container { max-width: 1200px; margin: 0 auto; padding: 4rem 1.5rem; position: relative; z-index: 1; }

  .page-header { margin-bottom: 5rem; text-align: center; }
  .btn-back { display: inline-block; color: var(--text-muted); text-decoration: none; margin-bottom: 1.5rem; font-size: 1rem; transition: color 0.3s; }
  .btn-back:hover { color: var(--accent-mint); }
  
  h1 { font-family: var(--font-heading); font-size: 3.5rem; margin-bottom: 0.8rem; letter-spacing: -1px; }
  .text-gradient { 
    background: linear-gradient(to right, #34d399, #a78bfa); 
    -webkit-background-clip: text; -webkit-text-fill-color: transparent; 
  }
  .subtitle { color: var(--text-muted); font-size: 1.25rem; max-width: 650px; margin: 0 auto; line-height: 1.6; }

  /* FONDO */
  .background-grid {
    position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -10;
    background-color: #0f172a;
    background-image: radial-gradient(#334155 1px, transparent 1px);
    background-size: 30px 30px;
    opacity: 0.3;
  }
  .ambient-glow {
    position: fixed; top: 20%; left: 50%; transform: translateX(-50%);
    width: 600px; height: 600px;
    background: radial-gradient(circle, rgba(52, 211, 153, 0.15) 0%, transparent 70%);
    z-index: -5;
    pointer-events: none;
  }

  /* --- PIPELINE CONTAINER --- */
  .pipeline-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem; /* Reduje un poco el gap para evitar overflow en pantallas medianas */
    position: relative;
    width: 100%;
  }

  .pipeline-step {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    z-index: 1; /* Contexto de apilamiento local */
  }

  /* NODO */
  .step-node {
    width: 56px; height: 56px;
    background: #0f172a;
    border: 3px solid var(--step-color);
    border-radius: 50%;
    display: flex; align-items: center; justify-content: center;
    font-weight: 800; color: var(--step-color);
    font-size: 1.1rem;
    position: relative; 
    z-index: 10; /* El nodo siempre encima de la l√≠nea */
    margin-bottom: 2.5rem;
    box-shadow: 0 0 20px color-mix(in srgb, var(--step-color), transparent 60%);
    transition: transform 0.3s;
  }
  .pipeline-step:hover .step-node { transform: scale(1.1); background: var(--step-color); color: #0f172a; }

  /* --- L√çNEA CONECTORA CORREGIDA --- */
  .connector-line {
    position: absolute;
    top: 28px; /* Centrado verticalmente con el nodo (56px / 2) */
    left: 50%; /* Comienza exactamente en el centro del nodo actual */
    height: 3px;
    
    /* Gradiente */
    background: linear-gradient(90deg, var(--step-color) 0%, var(--next-color) 100%);
    
    z-index: 0; /* Detr√°s del nodo */
    
    /* C√ÅLCULO DE ANCHO:
       100% = Ancho de la columna actual
       + 2rem = Ancho del gap
       Esto conecta centro con centro.
    */
    width: calc(100% + 2rem); 
    
    /* ELIMINADO: transform: translateX(50%); <--- ESTO CAUSABA EL ERROR EN EL 01 */
    opacity: 0.6;
    pointer-events: none; /* Evita que la l√≠nea interfiera con clicks */
  }

  /* TARJETA */
  .step-card {
    background: rgba(30, 41, 59, 0.6); /* Un poco m√°s opaco para evitar mezcla visual */
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    padding: 1.8rem;
    width: 80%;
    text-align: left;
    text-decoration: none;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    backdrop-filter: blur(12px); /* Blur aumentado */
    display: flex;
    flex-direction: column;
    height: 100%;
    z-index: 5; /* Asegura que la tarjeta est√© sobre elementos decorativos */
  }

  .step-card:hover {
    transform: translateY(-8px);
    border-color: var(--step-color);
    box-shadow: 0 15px 40px -10px color-mix(in srgb, var(--step-color), transparent 80%);
    z-index: 20; /* Al hacer hover, se pone encima de todo */
  }

  .card-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.2rem; }
  .step-icon { font-size: 1.8rem; }
  .status-badge { font-size: 0.75rem; font-weight: 700; text-transform: uppercase; background: rgba(255,255,255,0.1); padding: 4px 8px; border-radius: 6px; color: #cbd5e1; letter-spacing: 0.5px; }

  h3 { color: #f8fafc; font-size: 1.4rem; margin-bottom: 0.8rem; font-family: var(--font-heading); font-weight: 600; }
  p { color: #94a3b8; font-size: 1.05rem; line-height: 1.6; margin-bottom: auto; }

  .hover-indicator { 
    margin-top: 2rem;
    font-size: 0.95rem; font-weight: 700; color: var(--step-color); 
    opacity: 0; transform: translateX(-10px); transition: all 0.3s; 
  }
  .step-card:hover .hover-indicator { opacity: 1; transform: translateX(0); }

  /* RESPONSIVE */
  /* Aument√© el breakpoint a 1024px para evitar que se aprieten en tablets/laptops peque√±as */
  @media (max-width: 1024px) {
    .pipeline-container { 
      grid-template-columns: 1fr; /* Una sola columna vertical */
      gap: 0;
    }
    .pipeline-step { 
      flex-direction: row; 
      align-items: flex-start; 
      gap: 1.5rem; 
      padding-bottom: 3.5rem; 
    }
    
    .step-node { margin-bottom: 0; flex-shrink: 0; }
    
    .connector-line {
      top: 56px; left: 28px; /* Sale desde abajo del nodo */
      width: 3px; 
      height: 100%; /* Altura completa para conectar verticalmente */
      background: linear-gradient(180deg, var(--step-color) 0%, var(--next-color) 100%);
    }
  }
</style>