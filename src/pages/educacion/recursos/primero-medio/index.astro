---
import Layout from '../../../../layouts/Layout.astro';

const secuencias = [
  {
    step: "01",
    titulo: "Unidad 1: Números",
    leccion: "Representación y Densidad en ℚ",
    desc: "Entendiendo la equivalencia semántica entre fracciones y decimales.",
    link: "/educacion/recursos/primero-medio/racionales-equivalencia",
    status: "Disponible",
    color: "--accent-mint" // Menta
  },
  {
    step: "02",
    titulo: "Unidad 1: Números",
    leccion: "Algoritmos de Conversión",
    desc: "Métodos algebraicos para la transformación de decimales finitos e infinitos.",
    link: "/educacion/recursos/primero-medio/transformacion-decimal",
    status: "Disponible",
    color: "#3b82f6" // Azul Ingeniero
  },
  {
    step: "03",
    titulo: "Unidad 1: Números",
    leccion: "Simplificación y Eficiencia",
    desc: "La fracción irreducible como estándar de calidad y cierre del ciclo.",
    link: "/educacion/recursos/primero-medio/simplificacion-fracciones",
    status: "Disponible",
    color: "--accent-purple" // Púrpura
  }
];
---

<Layout titulo="Primero Medio | Ruta de Aprendizaje">
  <div class="background-grid"></div>

  <main class="container">
    <header class="page-header">
      <a href="/educacion/recursos" class="btn-back">← Volver a Herramientas</a>
      <h1>Ruta de <span class="text-gradient">Aprendizaje</span></h1>
      <p class="subtitle">
        Sigue la secuencia lógica para dominar la unidad de Números Racionales.
      </p>
    </header>

    <div class="timeline-wrapper">
      <div class="timeline-track"></div>

      {secuencias.map((s, index) => (
        <article class="timeline-item" style={`--item-color: ${s.color};`}>
          
          <div class="timeline-marker">
            <span class="step-number">{s.step}</span>
          </div>

          <a href={s.link} class="timeline-card">
            <div class="card-glow"></div>
            
            <div class="card-content">
              <div class="header-row">
                <span class="badge" style={`color: var(${s.color}); background: color-mix(in srgb, var(${s.color}), transparent 90%);`}>
                  {s.status}
                </span>
                <span class="unit-label">{s.titulo}</span>
              </div>

              <h3>{s.leccion}</h3>
              <p>{s.desc}</p>
              
              <div class="card-footer">
                <span class="access-text">Ir a la clase</span>
                <span class="arrow-icon">→</span>
              </div>
            </div>
          </a>
        </article>
      ))}
    </div>

  </main>
</Layout>

<style>
  /* --- CONFIGURACIÓN BASE --- */
  .container { max-width: 900px; margin: 0 auto; padding: 4rem 1.5rem; }

  .page-header { margin-bottom: 4rem; padding-left: 3rem; /* Alineado con las tarjetas */ }
  .btn-back { display: inline-block; color: var(--text-muted); text-decoration: none; margin-bottom: 1.5rem; font-size: 0.9rem; transition: color 0.3s; }
  .btn-back:hover { color: var(--accent-mint); }
  
  h1 { font-family: var(--font-heading); font-size: 3rem; margin-bottom: 0.5rem; }
  .text-gradient { 
    background: linear-gradient(to right, var(--accent-mint), var(--accent-purple)); 
    -webkit-background-clip: text; -webkit-text-fill-color: transparent; 
  }
  .subtitle { color: var(--text-muted); font-size: 1.1rem; max-width: 600px; }

  /* --- TIMELINE WRAPPER --- */
  .timeline-wrapper {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 3rem; /* Espacio entre clases */
    padding-left: 1rem;
  }

  /* La línea vertical continua */
  .timeline-track {
    position: absolute;
    top: 20px;
    bottom: 50px;
    left: 28px; /* Ajustado al centro del marcador */
    width: 2px;
    background: linear-gradient(to bottom, var(--accent-mint), #3b82f6, var(--accent-purple));
    z-index: -1;
    opacity: 0.5;
  }

  /* --- ITEM INDIVIDUAL --- */
  .timeline-item {
    display: flex;
    gap: 2rem;
    align-items: stretch;
    position: relative;
  }

  /* MARCADOR (Círculo Izquierdo) */
  .timeline-marker {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: var(--bg-primary);
    border: 2px solid var(--item-color); /* Color dinámico */
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    margin-top: 1rem; /* Alineado con el título */
    box-shadow: 0 0 15px color-mix(in srgb, var(--item-color), transparent 50%);
    z-index: 1;
  }

  .step-number {
    font-size: 0.8rem;
    font-weight: 700;
    color: var(--item-color);
  }

  /* --- TARJETA DE CONTENIDO --- */
  .timeline-card {
    flex-grow: 1;
    background: rgba(30, 41, 59, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    padding: 1.5rem 2rem;
    text-decoration: none;
    position: relative;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    backdrop-filter: blur(10px);
  }

  /* Interacciones Hover */
  .timeline-card:hover {
    transform: translateX(10px); /* Movimiento tipo flecha hacia adelante */
    background: rgba(30, 41, 59, 0.8);
    border-color: var(--item-color);
    box-shadow: 0 10px 30px -10px color-mix(in srgb, var(--item-color), transparent 80%);
  }

  /* Glow sutil al fondo */
  .card-glow {
    position: absolute;
    top: 0; left: 0; width: 4px; height: 100%;
    background: var(--item-color);
    opacity: 0.5;
    transition: opacity 0.3s;
  }
  .timeline-card:hover .card-glow { opacity: 1; }

  /* Contenido Interno */
  .header-row { display: flex; justify-content: space-between; align-items: center; margin-bottom: 0.8rem; }
  
  .badge { padding: 0.2rem 0.6rem; border-radius: 4px; font-size: 0.7rem; font-weight: 700; text-transform: uppercase; }
  .unit-label { font-size: 0.75rem; color: var(--text-muted); text-transform: uppercase; letter-spacing: 1px; }

  h3 { color: var(--text-main); font-size: 1.5rem; margin: 0 0 0.5rem 0; font-family: var(--font-heading); }
  p { color: var(--text-muted); margin-bottom: 1.5rem; line-height: 1.5; font-size: 0.95rem; }

  /* Footer con flecha animada */
  .card-footer {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .access-text { color: var(--item-color); font-size: 0.9rem; font-weight: 600; }
  .arrow-icon { color: var(--item-color); transition: transform 0.3s; }
  
  .timeline-card:hover .arrow-icon { transform: translateX(5px); }

  /* Background (Igual al anterior) */
  .background-grid {
    position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -10;
    background-color: var(--bg-primary);
    background-image: linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px),
    linear-gradient(90deg, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
    background-size: 40px 40px;
    mask-image: radial-gradient(circle at center, black 40%, transparent 100%);
  }
</style>